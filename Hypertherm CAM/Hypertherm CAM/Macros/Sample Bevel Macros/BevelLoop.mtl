;
; This transition loop macro should be used on a corner
;
START
INSERT (START BevelLoop.mtl)
IF STARTANGLE = 0
	; FROM STRAIGHT CUT
	SETVOLTAGE
ENDIF
GOTO 1 0.9
ROTATEOFF
AHCOFF
IF STARTANGLE ! 0
	; FROM ANGLE
	SETVOLTAGE
ENDIF
BEVELANG 0
KERFOFF
FEEDRATE
GOTO 3 0.9
SETKERF
KERFLEFT
	IF ENDANGLE ! 0
		ROTATEON
		FOLLOWERON
	ENDIF
BEVELANG
FEEDRATE
	IF ENDANGLE = 0
		ROTATEOFF
	ENDIF
GOTO 3 0.45
AHCON
GOTO 3 0.0
INSERT (END BevelLoop.mtl)
END
